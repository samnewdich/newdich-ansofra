#!/usr/bin/env php
<?php

// Try to find Composer's autoloader
$autoloadFiles = [
    __DIR__ . '/../vendor/autoload.php',                    // Local install
    __DIR__ . '/../../../autoload.php',                     // Global install
    getcwd() . '/vendor/autoload.php',                      // Running from a project
];

foreach ($autoloadFiles as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

if (!class_exists('Ansofra\\Bin\\Console')) {
    fwrite(STDERR, "Autoloader not found. Please run 'composer install' or reinstall the package.\n");
    exit(1);
}

use Ansofra\Bin\Console;

$app = new Console();
$app->run($argv);
?>