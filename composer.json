{
    "name": "newdich/ansofra",
    "description": "An elegant PHP framework by Newdich for building scalable web applications.",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Sam Newdich",
            "email": "you@example.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Ansofra\\Bin\\": "bin/",
            "Ansofra\\App\\": "app/",
            "Ansofra\\Src\\": "src/",
            "Ansofra\\Apis\\": "apis/",
            "Ansofra\\Schema\\": "Schema/",
            "Ansofra\\Route\\": "route/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ansofra\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/ansofra"
    ],
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"echo 'Ansofra framework autoloaded successfully.' . PHP_EOL;\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
